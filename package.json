{
  "name": "service-backbone",
  "version": "1.0.0",
  "description": "Backend service backbone designed to bootstrap microservices with a clear and scalable structure.",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "tsx watch src/infra/http/entrypoint.ts",
    "dev:cli": "tsx src/infra/cli/entrypoint.ts",
    "dev:schedule": "tsx watch src/infra/schedule/entrypoint.ts",
    "dev:eventbus": "tsx watch src/infra/eventBus/entrypoint.ts",
    "build": "node esbuild.config.mjs",
    "build:web": "node esbuild.config.mjs --entry=web",
    "build:cli": "node esbuild.config.mjs --entry=cli",
    "build:schedule": "node esbuild.config.mjs --entry=schedule",
    "build:eventbus": "node esbuild.config.mjs --entry=eventbus",
    "start": "node dist/web/app.js",
    "start:cli": "node dist/cli/app.js",
    "start:schedule": "node dist/schedule/app.js",
    "start:eventbus": "node dist/eventbus/app.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "knex": "tsx --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/infra/db/knex/knexfile.ts",
    "db:make:migration": "pnpm knex migrate:make",
    "db:make:seed": "pnpm knex seed:make",
    "db:migrate": "pnpm knex migrate:latest",
    "db:seed": "pnpm knex seed:run",
    "db:status": "pnpm knex migrate:status",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@faker-js/faker": "^9.7.0",
    "@types/amqplib": "^0.10.7",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@types/node-schedule": "^2.1.7",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "amqplib": "^0.10.7",
    "@aws-sdk/client-ses": "^3.787.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "node-schedule": "^2.1.1",
    "pg": "^8.14.1",
    "ts-case-convert": "^2.1.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  }
}
